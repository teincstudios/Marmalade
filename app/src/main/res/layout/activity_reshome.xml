<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#fff"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:contentPaddingLeft="12dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="1dp"
                            android:src="@drawable/places_ic_search" />

                        <EditText
                            android:id="@+id/search_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:textColor="@android:color/black"
                            android:background="@android:color/transparent"
                            android:hint="What joint are you looking for.."
                            android:imeOptions="actionSearch"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:textSize="16sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/filter_button"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:contentPadding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_filter" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:src="@color/dividerColor"/>

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <fragment
                    android:layout_margin="5dp"
                    android:id="@+id/place_autocomplete_fragment"
                    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                    android:layout_width="240dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:gravity="end|center_vertical"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:text="Love, Food."
                    android:layout_marginEnd="10dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    />

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="start">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="18"
                        android:text="Current Location"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/location_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="18"
                        android:text="Town, City"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />


                </LinearLayout>
            </RelativeLayout>



            <LinearLayout
                android:id="@+id/main_content_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/trending_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Popular Joints"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/trendingspot_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:minHeight="150dp"
                        android:background="@color/lightBlue"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingStart="15dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:text="All Restaurants"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:src="@color/blueGrey" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/restaurants_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:minHeight="150dp"
                    android:paddingBottom="25dp"
                 />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
